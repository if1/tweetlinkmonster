!!! XML
%feed{:xmlns => "http://www.w3.org/2005/Atom"}
  %title
    ="#{@user.username}'s Tweet Link Monster Feed"
  %link{:href => "/feed/#{@user.username}.xml", :rel => self}
  %link{:href => "/"}
  %updated
    =Time.now
  %author
    %name
      Daniel Jackoway
  %id
    =@user.nil?.to_s + @user.tweets.count.to_s

  -Tweet.all(:user_id => @user.id, :order => [:created_at.desc]).each do |tweet|
    %entry
      %title
        =tweet.title
      %link{:href => tweet.website}
      %id
        http://www.tweetlinkmonster.com
      %updated
        =tweet.created_at
      %content
        =tweet.text
    

