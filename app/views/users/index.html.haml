%h1
  Users controller, index action
%p
  Edit this file in
  %tt
    app/views/users/index.html.erb
%style{:type => "text/css"}
  td {padding: 3px}
  
%table
  %tr
    %td
      Username
    %td
      Password
    %td
      Email
    %td
      ID
  - for user in @users
    %tr
      %td
        = user.username
      %td
        = user.password
      %td
        = user.email
      %td
        = user.id
      %td
        = link_to 'Show', url(:user, user)
      %td
        = link_to 'Edit', url(:edit_user,  user)
      %td
        = link_to 'Delete', url(:delete_user, user)

= link_to 'New', url(:new_user)
