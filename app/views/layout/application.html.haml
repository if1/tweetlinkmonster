%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang'=>"en-us", :lang=>"en-us"}
  %head
    %title
      Tweet Link Monster
    %meta{'http-equiv'=>"content-type", :content => "text/html; :charset=>utf-8"}
    
    = css_include_tag "main"
    <!--[if IE]>
    = css_include_tag "ie"
    <![endif]-->
  %body
    #container
      #banner
        = image_tag 'banner.png', :alt=>"Tweet Link Monster"
      #body

    
        #header
          .links
            = link_to "Home", url(:index)
            #loginout
              = login_or_out_link
          
          
        -#.sidebar
          #right
          

            = sponsor_image
        
        #main
          %p
            - unless message.empty?
              #message
                = flash_parse h(message)
              
          = catch_content :for_layout
        #clearfooter
    #footer
      
      = link_to "FAQ", url(:index)
      = link_to "Privacy", url(:privacy)
      = link_to "About", url(:about)
      = link_to "Contact Us", url(:contact)
      #sponsor
        = sponsor_image
      
      
            